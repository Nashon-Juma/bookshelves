.sidenav {
    margin-bottom: 0;
    margin-top: 0;
    list-style-type: none;
    padding-left: 0;
    font-size: 1.06rem;
    line-height: 1.3;
}

.sidenav a:hover {
    text-decoration: none;
}

#toc li {
    @apply border-l-4 border-transparent;
}
#toc .active {
    @apply border-green-600;
}

.sidenav a:not(.active) {
    /* color: #212121; */
}

.sidenav a {
    display: block;
    padding: 0.2rem 0.2rem;
    text-decoration: none;
}

.sidenav__sublist {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
    font-size: 1rem;
}

.sidenav__sublist a {
    padding-left: 2rem;
}

.sidenav__sublist .sidenav__sublist a {
    padding-left: 3rem;
}

.sidenav__sublist .sidenav__sublist .sidenav__sublist a {
    padding-left: 4rem;
}

pre {
    position: relative;
    scrollbar-width: thin;
}
.copy-code-button {
    @apply absolute top-0 right-0 z-30 bg-gray-700 bg-opacity-50 hover:bg-gray-600 transition-colors duration-100 p-2 rounded-bl-md rounded-tr-md text-sm border-b border-l border-gray-300 text-gray-100;
}
