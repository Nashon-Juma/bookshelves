{
    "openapi": "3.0.0",
    "info": {
        "title": "Bookshelves API",
        "description": "Documentation about Bookshelves API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/authors": {
            "get": {
                "tags": [
                    "authors"
                ],
                "summary": "List of authors",
                "description": "Authors",
                "operationId": "App\\Http\\Controllers\\Api\\AuthorController::index",
                "parameters": [
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Integer to choose how many books you show in each page",
                        "required": false,
                        "style": "form",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "example": 32
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/books": {
            "get": {
                "tags": [
                    "books"
                ],
                "summary": "List of books",
                "description": "Books",
                "operationId": "App\\Http\\Controllers\\Api\\BookController::index",
                "parameters": [
                    {
                        "name": "all",
                        "in": "query",
                        "description": "Boolean to show all books without pagination",
                        "required": false,
                        "style": "form",
                        "schema": {
                            "type": "boolean",
                            "items": {
                                "type": "boolean"
                            }
                        },
                        "example": false
                    },
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Integer to choose how many books you show in each page",
                        "required": false,
                        "style": "form",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "example": 32
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/books/{author-slug}/{book-slug}": {
            "get": {
                "tags": [
                    "books"
                ],
                "summary": "Show book by author slug and book slug",
                "description": "Muliple tags can be provided with comma separated strings. Use tag1, tag2, tag3 for testing.",
                "operationId": "findBookByAuthorSlugBookSlug",
                "parameters": [
                    {
                        "name": "author-slug",
                        "in": "path",
                        "description": "Slug of author name like 'auel-jean' for Jean Auel",
                        "required": true,
                        "style": "form",
                        "schema": {
                            "type": "string",
                            "items": {
                                "type": "string"
                            }
                        },
                        "example": "auel-jean"
                    },
                    {
                        "name": "book-slug",
                        "in": "path",
                        "description": "Slug of book name like 'les-refuges-de-pierre' for Les refuges de pierre",
                        "required": true,
                        "style": "form",
                        "schema": {
                            "type": "string",
                            "items": {
                                "type": "string"
                            }
                        },
                        "example": "les-refuges-de-pierre"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid author-slug value or book-slug value"
                    }
                }
            }
        },
        "/search": {
            "get": {
                "tags": [
                    "search"
                ],
                "summary": "List of search results",
                "description": "Search",
                "operationId": "App\\Http\\Controllers\\Api\\SearchController::index",
                "parameters": [
                    {
                        "name": "terms",
                        "in": "query",
                        "description": "String to search books",
                        "required": true,
                        "style": "form",
                        "schema": {
                            "type": "string"
                        },
                        "example": "refuges"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/series": {
            "get": {
                "tags": [
                    "series"
                ],
                "summary": "List of series",
                "description": "Series",
                "operationId": "App\\Http\\Controllers\\Api\\SerieController::index",
                "parameters": [
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Integer to choose how many books you show in each page",
                        "required": false,
                        "style": "form",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "example": 32
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "global",
            "description": "Global requests"
        },
        {
            "name": "books",
            "description": "Books requests"
        },
        {
            "name": "series",
            "description": "Series requests"
        },
        {
            "name": "authors",
            "description": "Authors requests"
        },
        {
            "name": "search",
            "description": "Search requests"
        }
    ],
    "security": [
        []
    ]
}