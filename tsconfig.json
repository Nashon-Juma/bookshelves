{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@": ["./resources/js"]
    },
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./**/*.d.ts"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
