{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@": ["./resources/js"]
    },
    "typeRoots": ["./node_modules/@types", "resources/**/*.d.ts"],
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "resources/**/*.ts",
    "resources/**/*.{js,jsx,ts,tsx,vue}",
    "components.d.ts",
    "auto-imports.d.ts"
  ]
}
